---
import ChristmasLights from "./ChristmasLights.astro";

// Seasonal check for padding adjustment
const now = new Date();
const month = now.getMonth();
const day = now.getDate();
const isChristmasSeason =
  (month === 10 && day >= 27) || // Nov 27+
  month === 11 || // All of December
  (month === 0 && day === 1); // Jan 1
---

<footer role="contentinfo" class:list={[{ "footer--christmas": isChristmasSeason }]}>
  <ChristmasLights position="bottom" />
  <div class="wrapper footer-content">
    <nav aria-label="secondary navigation">
      <ul role="list" class="cluster">
        <li>
          <a href="/uses/">Things I Use</a>
        </li>
        <li>
          <a href="https://github.com/kory-smith/korysmith.dev" rel="external">
            View Source
          </a>
        </li>
      </ul>
    </nav>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid var(--color-mid-glare);
    margin-top: auto;
    padding-block: var(--space-l);
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-m);
  }

  footer ul {
    gap: var(--space-m);
  }

  footer a {
    font-size: var(--size-step-0);
    color: var(--color-mid);
    transition: color var(--transition-movement);
  }

  footer a:hover {
    color: var(--color-dark);
  }

  footer a::after {
    height: 1px;
    background: var(--color-mid);
  }

  /* Christmas lights positioning */
  .footer--christmas {
    position: relative;
  }
</style>
