---
import "@/base.css";

import Navigation from "@/components/Navigation.astro";
import Footer from "@/components/Footer.astro";
import Head from "./Head.astro";

interface Props {
  title: string;
  description: string;
	publishedDate: Date;
	lastUpdatedDate: Date
}

const { title, description, publishedDate, lastUpdatedDate } = Astro.props;

const shouldShowLastUpdateDate = lastUpdatedDate && lastUpdatedDate > publishedDate;
---

<html lang="en">
  <Head title={title} description={description} />
  <body>
    <Navigation />
    <main id="main-content">
      <article class="wrapper region prose flow">
				<h1>{title}</h1>
				<h3><i>Published on <time class="inline">{publishedDate.toLocaleDateString()}</time></i></h3>
				{shouldShowLastUpdateDate && <h3 class="my-0"><i>Last updated on <time class="inline">{lastUpdatedDate.toLocaleDateString()}</time></i></h3>}
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
