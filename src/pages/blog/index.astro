---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const blog = await getCollection("blog");
// Most recent first
const sortedBlog = blog
  .filter((post) => post.data.status === "published")
  .toSorted((a, b) => {
    const aPublished = a.data.publishedDate as Date;
    const bPublished = b.data.publishedDate as Date;
    return aPublished > bPublished ? -1 : aPublished < bPublished ? 1 : 0;
  });
---

<BaseLayout title="Blog" description="All of Kory's blog posts">
  <h1>My Articles</h1>
  <ul>
    {
      sortedBlog.map((post) => {
        // publishedDate is always defined because these posts are published. TS just isn't smart enough.
        const dateString = post.data.publishedDate!.toLocaleDateString();
        return (
          <li>
            <a href={post.slug}>{post.data.title}</a> ({dateString})
          </li>
        );
      })
    }
  </ul>
</BaseLayout>
