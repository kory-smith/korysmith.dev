---
import BaseLayout from "@/layouts/BaseLayout.astro";

const numRow = [
  ["1", "!"],
  ["2", "@"],
  ["3", "#"],
  ["4", "$"],
  ["5", "%"],
  ["6", "^"],
  ["7", "&"],
  ["8", "*"],
  ["9", "("],
  ["0", ")"],
  ["-", "_"],
  ["=", "+"],
  ["Backspace"],
];
const topRow = [
  ["Tab"],
  ["q", "Q"],
  ["w", "W"],
  ["e", "E"],
  ["r", "R"],
  ["t", "T"],
  ["y", "Y"],
  ["u", "U"],
  ["i", "I"],
  ["o", "O"],
  ["p", "P"],
  ["[", "{"],
  ["]", "}"],
  ["\\", "|"],
];
const middleRow = [
  ["Caps Lock"],
  ["a", "A"],
  ["s", "S"],
  ["d", "D"],
  ["f", "F"],
  ["g", "G"],
  ["h", "H"],
  ["j", "J"],
  ["k", "K"],
  ["l", "L"],
  [";", ":"],
  ["'", '"'],
  ["Enter"],
];
const bottomRow = [
  ["Shift"],
  ["z", "Z"],
  ["x", "X"],
  ["c", "C"],
  ["v", "V"],
  ["b", "B"],
  ["n", "N"],
  ["m", "M"],
  [",", "<"],
  [".", ">"],
  ["/", "?"],
  ["Shift"],
];
---

<BaseLayout
  title="Keyboard shortcuts visualizer"
  description="A visualization of my various keyboard shortcuts and what key combinations trigger them."
>
  <div class="keyboard-container">
    {numRow.map((num) => <p>{num[0]}</p>)}
    {topRow.map((char) => <p>{char[0]}</p>)}
    {middleRow.map((char) => <p>{char[0]}</p>)}
    {bottomRow.map((char) => <p>{char[0]}</p>)}
  </div>
</BaseLayout>
